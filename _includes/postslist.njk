<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}&nbsp({{ post.data.year }}){% else %}<code>{{ post.url }}</code>{% endif %}</a>
		{% if post.data.rating %}
			{% for i in range(0, 7) -%}
				<span class="fa fa-star {% if i < post.data.rating %}checked{% endif %}"></span>
			{%- endfor %}
		{% endif %}
	</li>
{% endfor %}
</ol>
